model Passage {
  id                String        @id @default(cuid())
  title             String
  body              String
  hash              String        @unique
  tagId             String
  tag               Tag           @relation(fields: [tagId], references: [id])
  questions         Question[]
  metadata          Json?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt  

  @@map("Passage")
  @@index([hash], name: "passages_hash_idx")
  @@index([tagId])
}
